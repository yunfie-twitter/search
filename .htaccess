RewriteEngine On

# Custom Error Pages (4xx Client Errors)
ErrorDocument 400 /error.php?type=400
ErrorDocument 401 /error.php?type=401
ErrorDocument 402 /error.php?type=402
ErrorDocument 403 /error.php?type=403
ErrorDocument 404 /error.php?type=404
ErrorDocument 405 /error.php?type=405
ErrorDocument 406 /error.php?type=406
ErrorDocument 407 /error.php?type=407
ErrorDocument 408 /error.php?type=408
ErrorDocument 409 /error.php?type=409
ErrorDocument 410 /error.php?type=410
ErrorDocument 413 /error.php?type=413
ErrorDocument 414 /error.php?type=414
ErrorDocument 415 /error.php?type=415
ErrorDocument 418 /error.php?type=418
ErrorDocument 421 /error.php?type=421
ErrorDocument 422 /error.php?type=422
ErrorDocument 423 /error.php?type=423
ErrorDocument 424 /error.php?type=424
ErrorDocument 425 /error.php?type=425
ErrorDocument 426 /error.php?type=426
ErrorDocument 428 /error.php?type=428
ErrorDocument 429 /error.php?type=429
ErrorDocument 431 /error.php?type=431
ErrorDocument 451 /error.php?type=451

# Custom Error Pages (5xx Server Errors)
ErrorDocument 500 /error.php?type=500
ErrorDocument 501 /error.php?type=501
ErrorDocument 502 /error.php?type=502
ErrorDocument 503 /error.php?type=503
ErrorDocument 504 /error.php?type=504
ErrorDocument 505 /error.php?type=505
ErrorDocument 506 /error.php?type=506
ErrorDocument 507 /error.php?type=507
ErrorDocument 508 /error.php?type=508
ErrorDocument 510 /error.php?type=510
ErrorDocument 511 /error.php?type=511

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

# Redirect .php URLs to extension-less URLs
RewriteCond %{THE_REQUEST} \.php [NC]
RewriteRule ^(.*)\.php$ /$1 [R=301,L]

# Cache Control
SetEnvIf Request_URI ".*" Ngx_Cache_NoCacheMode=off
SetEnvIf Request_URI ".*" Ngx_Cache_AllCacheMode

# Security Headers
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# XPageSpeed Configuration
### BEGIN XPageSpeed - Do not edit the contents of this block! ###
XPagespeedDisableFilters lazyload_css
XPagespeedDisableFilters lazyload_javascript
XPagespeed on
<IfFile /var/xpagespeed/xpagespeed_ctl>
XPagespeed off
</IfFile>
### END XPageSpeed - Do not edit the contents of this block! ###

# Protect sensitive files
<FilesMatch "\.(env|log|ini|bak|sql)$">
    Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# UTF-8 Encoding
AddDefaultCharset UTF-8