XPagespeedDisableFilters lazyload_javascript
XPagespeed on
<IfFile /var/xpagespeed/xpagespeed_ctl>
XPagespeed off
</IfFile>
### END XPageSpeed - Do not edit the contents of this block! ###

# Protect sensitive files
<FilesMatch "\.(env|log|ini|bak|sql|git|gitignore|htaccess|htpasswd)$">
    Require all denied
</FilesMatch>

# Protect maintenance.json from external access (optional)
<Files "maintenance.json">
    Require all denied
</Files>

# Disable directory browsing
Options -Indexes

# UTF-8 Encoding
AddDefaultCharset UTF-8

# Prevent access to hidden files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>